{
  "rule_id": "nmap_port_scan_detection",
  "risk_score": 70,
  "severity": "medium",
  "description": "Detects port scanning activity using Nmap - WSL2 Optimized",
  "type": "query",
  "query": "message: \"*nmap*\"",
  "index": [
    "filebeat-wsl-*"
  ],
  "aggregation": {
    "group_by": [
      "user.name"
    ],
    "agg_type": "value_count",
    "agg_field": "@timestamp",
    "time_window": "5m",
    "threshold": {
      "value": 1,
      "operator": "gt"
    }
  },
  "false_positives": [
    "Legitimate network administration"
  ],
  "tags": ["attack.t1046", "siem", "wsl2"],
  "threat": [
    {
      "framework": "MITRE ATT&CK",
      "tactic": {
        "name": "Discovery",
        "id": "TA0007"
      },
      "technique": [
        {
          "name": "Network Service Scanning",
          "id": "T1046"
        }
      ]
    }
  ],
  "note": "WSL2 optimized - detects any nmap command execution. Single occurrence triggers alert.",
  "interval": "2m",
  "from": "now-5m"
}
